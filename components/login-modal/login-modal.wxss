@import "/style/flex.wxss";

/* components/modal/modal.wxss */
/*遮罩层*/
.modal-mask {
    display: flex;
    justify-content: center;
    align-items: center;
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    padding: 20rpx;
    background-color: rgba(0, 0, 0, 0.6);
    z-index: 999;
}

/*遮罩内容*/
.modal-content {
    width: 75vw;
    height: 80vh;
    background-color: rgba(245, 245, 245, 0.9);
    border-radius: 10rpx;
    text-align: center;
}

.main-content image {
    margin-top: 25rpx;
    border-radius: 7rpx;
    margin-bottom: 25rpx;
    width: 270rpx;
    height: 250rpx;
}

.staffID,
.pwd {
    margin-top: 10rpx;
    background-color: rgba(169, 166, 171, 0.1);
    height: 13%;
    width: 85%;
    border-radius: 3rpx;
}

/*底部按钮*/
.modal-footer {
    height: 10%;
    border-top: 2rpx solid #D2D3D5;
}

.cancel-btn,
.confirm-btn {
    flex: 1;
    height: 92%;
    line-height: 65rpx;
    padding: auto;
    font-size: 25rpx;
}

.cancel-btn {
    color: #000;
    border-right: 2rpx solid #D2D3D5;
}

.confirm-btn {
    color: #09BA07;
}