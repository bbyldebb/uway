/* customer.wxss */
.searchbar {
  height: 7vh;
  background-color: rgb(192, 192, 192, 0.2);
  margin: auto;
}

.logo {
  height: 80%;
  width: 80%;
  margin-left: 15rpx;
  margin-top: 25rpx;
  color: gray;
}

.searchbar button {
  height: 60%;
  border-radius: 50rpx;
  font-weight: initial;
  font-size: 15rpx;
  color: white;
  background-color: #C09664;
}

.switchBar {
  height: 6vh;
}

swiper {
  height: 87vh;
}

.menuClass {
  width: 22%;
  height: 100%;
  background-color: rgb(192, 192, 192, 0.1);
}

.menuClassItem {
  height: 15%;
  border-radius: 3rpx;
  margin-left: 10rpx;
  background-color: rgb(192, 192, 192, 0.1);
  color: rgb(105, 105, 105);
  border: 0.1rpx solid rgb(148, 158, 148, 0.1);
}

.menuDetail {
  width: 78%;
  height: 100%;
}

.menuDetailItem {
  height: 22%;
  border: 0.2rpx solid rgb(148, 158, 148, 0.1);
}

.menuDetailItem image {
  width: 200rpx;
  height: 200rpx;
  margin-left: 15rpx;
  margin-right: 10rpx;
  border-radius: 10rpx;
}

.dishDsc {
  display: flex;
  flex-direction: column;
  height: 90%;
}

.commentDetail {
  width: 100%;
  height: 100%;
}

.commentDetailItem {
  width: 100%;
  display: flex;
  flex-direction: column;
  margin: 20rpx;
  margin-left: 30rpx;
  margin-bottom: 200rpx;
}

.customer-info {
  width: 100%;
  height: 15%;
  display: flex;
}

.customer-info image {
  width: 20%;
  height: 80%;
  margin-right: 20rpx;
  border-radius: 15rpx;
  top: 0%;
}

.customer-info-word {
  width: 70%;
  display: flex;
  flex-direction: column;
}

.commentDsc {
  width: 100%;
  margin-bottom: 20rpx;
  padding: 10rpx;
  display: flex;
  flex-direction: column;
}

.commentDsc view {
  width: 100%;
}

.toComment {
  position: fixed;
  bottom: 5%;
  right: 10%;
  background: white;
  border-radius: 50%;
}

.rating {
  margin-top: 20rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
}

.ratingbox {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.text {
  width: 25%;
  font-size: 1em;
}

.stars {
  width: 62.8%;
  background-color: rgb(255, 255, 255);
  display: flex;
  flex-direction: row;
  margin-bottom: 1rpx;
}

.single {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  flex-direction: row;
  width: 100%;
}

.orderList {
  position: fixed;
  bottom: 0rpx;
  width: 100vw;
  height: 100rpx;
  background-color: rgb(254, 244, 209);
}

.cartIcon {
  width: 120rpx;
  height: 120rpx;
  position: fixed;
  bottom: 3rpx;
  text-align: center;
  border-radius: 50%;
  background-color: #ff9600;
}

.totalMoney {
  flex: 1;
  line-height: 100rpx;
  text-align: center;
  font-size: 30rpx;
}

.maskBg {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 0.5;
  background: black;
  z-index: 100;
}

.cartList {
  position: fixed;
  left: 0;
  bottom: 0;
  right: 0;
  height: 550rpx;
  background: white;
  z-index: 200;
}

.cart-top {
  display: flex;
  justify-content: space-between;
  background: orange;
  height: 60rpx;
  color: white;
  font-weight: 500;
  font-size: 28rpx;
  padding: 5rpx 15rpx;
  position: fixed;
  left: 0;
  right: 0;
}

.order-item {
  border-bottom: 1rpx solid rgb(128, 128, 128, 0.2);
  padding: 5rpx 15rpx;
  height: 75rpx;
}

.confirmBtn {
  height: 100%;
  width: 170rpx;
  line-height: 100rpx;
  text-align: center;
  background-color: rgb(244, 201, 3, 0.6);
}