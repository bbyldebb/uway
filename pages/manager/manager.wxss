/* pages/manager/manager.wxss */
page {
    height: 100%;
}

.page-box {
    display: flex;
    width: 100%;
    height: 750rpx;
    flex-wrap: wrap;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    font-size: 20px;
}

.each-box {
    display: flex;
    flex-direction: column;
    width: 210rpx;
    height: 210rpx;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    margin: 20px;
    margin-bottom: 5px;
    background-color: white;
    box-shadow: gray 0px 0px 10px;
    border-radius: 5px;
}

.hover-color {
    background: linear-gradient(to bottom right, white, #b0d5df)
}