    flex-direction: column;
    align-items: center;
}
.control{
    width: 28%;
    height: 6%;
    display: flex;
    align-items:flex-start;
    justify-content: space-between;
}
.btn{
    width: 35%;
    height: 96%;
    margin-bottom: 5px;
    background-color: #BAC6AC;
}
.layout{
