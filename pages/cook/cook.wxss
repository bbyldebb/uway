page {
  height: 100%;
  background: linear-gradient(to right, rgba(163, 255, 180, 0.1) 0%, rgba(163, 255, 180, 0.1) 50%, rgba(163, 255, 180, 0.3) 50%, rgba(163, 255, 180, 0.3) 100%)
    /* background:white */

}

.box {
  display: flex;
  height: 100%;
  flex-direction: row;
  align-items: flex-start;
  box-sizing: border-box;
}

.left {
  width: 50%;
  height: 100%;
  display: flex;
  flex-direction: column;
  border-top: 0px;
  border-bottom: 0px;
}

.middle {
  width: 50%;
  height: 100%;
  display: flex;
  flex-direction: column;
  border: 0px;

}

.right {
  width: 10%;
  height: 100%;
  display: flex;
  flex-direction: column;
  border-color: white;
  border-style: solid;
  border-right-color: rgb(14, 11, 11);
}

.dish_list {
  display: flex;
  width: 95%;
  box-shadow: rgba(169, 166, 171, 0.1) 0px 0px 10px;
  margin: 15px;
  margin-right: 0;
}

.dish_message {
  display: flex;
  /* margin: 10px; */
  flex-wrap: wrap;
  font-family: 'Courier New', Courier, monospace;
  font-size: 15px;
  /* background: rgba(224,227,231,0.5); */
  background: white;
  width: 61.8%;
  border-radius: 5rpx;
  border: 1rpx solid #f2e6ce;
}

.takeit_message {
  background: rgba(169, 166, 171, 0.2);
}

.dish_detail {
  width: 100%;
  display: flex;
  height: 50px;
  line-height: 50px;
  flex-direction: column;
}

.nav {
  height: 10%;
  border-bottom: 1px solid #f2e6ce;
  margin: 0px;
  padding: 0px;
  text-align: center;
  justify-content: center;
  line-height: 50px;
  /* #f3edda */
  font-size: 20px;
}

.takeitbtn {
  display: inline-block;
  border-radius: 3rpx;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 23rpx;
  background-color: rgba(254, 176, 39, 0.993);
  color: white;
}